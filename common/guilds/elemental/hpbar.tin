#class {guild_hpbar} {kill}
#class {guild_hpbar} {open}

#action {HP:%d\/%d C:%d\%  NRG:%d\/%d\(%d\)  SP:%d\/%d  B:%d\(%d\%\) G2N:%*   T:%*:%*} {
    #if $gags[hpbar] {#line gag};
    #var my[hp][current] %1;
    #var my[hp][max] %2;
    #var my[gp2][current] %3;
    #var my[gp1][current] %4;
    #var my[gp1][max] %5;
    #var my[sp][current] %7;
    #var my[sp][max] %8;
};


#class {guild_hpbar} {close}